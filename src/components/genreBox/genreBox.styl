@import '../../assets/styles/vars.styl';

.genre-box {
    height: 150px;
    border: 1px solid $accent-color;
    color: $white;
    font-size: 24px;
    overflow: hidden;
    position: relative;
    display: inline-block;
    margin-right: 10px;
    cursor: pointer;
    transition: 450ms all;
}

span {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150px;
}

.genre-box:hover {
    background-color: $accent-color;
}